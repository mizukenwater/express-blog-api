{
  "compilerOptions": {
    "lib": [
      "dom",
      "es7",
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
